<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="CopyMLBinaries" BeforeTargets="CoreBuild">
    <PropertyGroup>
      <WindowsAIBinplaceMessage>Binplacing WindowsAI binaries: {0} {1} and {2}.</WindowsAIBinplaceMessage>
    </PropertyGroup>
    <Message Text="$([System.String]::Format('$(WindowsAIBinplaceMessage)', '$(WindowsAIBinary)', '$(WindowsAIInternalBinary)', '$(OnnxRuntimeBinary)'))" />
    <Copy SkipUnchangedFiles="True" SourceFiles="$(WindowsAIBinary);$(WindowsAIInternalBinary);$(OnnxRuntimeBinary)" DestinationFolder="$(OutDir)" />
  </Target>

  <ItemGroup>
    <ReferenceCopyLocalPaths Include="$(WindowsAIBinary);$(OnnxRuntimeBinary);$(WindowsAIInternalBinary)" />
  </ItemGroup>
</Project>
